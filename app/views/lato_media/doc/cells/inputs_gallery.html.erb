<%
  row = cell(:elements, :row).new
  block = cell(:elements, :block).new(class: 'xs-12 sm-12 md-12')
  code = cell(:elements, :code).new
  form = cell(:inputs, :form).new(url: '#', method: 'get')
%>

<!-- PRESENTATION -->
<%=raw row.open %>

  <%=raw block.open %>

    <%=raw cell(:elements, :title).new(label: 'Cells Inputs: Gallery') %>

    <p>A Gallery input is an extension of core inputs used to select a multiple media object from the media library.</p>

  <%=raw block.close %>

<%=raw row.close %>
<!-- / PRESENTATION -->

<hr>
<%=raw cell(:elements, :title).new(label: 'Normal Gallery input', size: 3) %>

<%=raw row.open %>

  <%=raw block.open %>

    <%=raw form.open %>

      <%=raw row.open %>

        <%=raw cell('LatoMedia', :inputs, :gallery).new(name: 'sample', label: 'Select multiple media', class: 'xs-12 sm-6 md-6') %>

        <%=raw cell('LatoMedia', :inputs, :gallery).new(name: 'sample', label: 'Select multiple media', class: 'xs-12 sm-6 md-6', value: @medias) %>

      <%=raw row.close %>

    <%=raw form.close %>
    
  <%=raw block.close %>

<%=raw row.close %>

<!-- CODE SECTION -->
<%=raw row.open %>

<%=raw block.open %>

<%=raw cell(:elements, :title).new(label: 'Code', size: 6) %>

<%=raw code.open %>

<%= erb_open_tag %>=raw cell('LatoMedia', :inputs, :gallery).new(name: 'sample', label: 'Select multiple media', class: 'xs-12 sm-6 md-6') <%= erb_close_tag %>

<%= erb_open_tag %>=raw cell('LatoMedia', :inputs, :gallery).new(name: 'sample', label: 'Select multiple media', class: 'xs-12 sm-6 md-6', value: @medias) <%= erb_close_tag %>

<%=raw code.close %>

<%=raw block.close %>

<%=raw row.close %>
<!-- / CODE SECTION -->